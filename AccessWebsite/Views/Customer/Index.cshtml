<!--Model Connection-->
@model IEnumerable<AccessWebsite.Models.Advantage.Customer>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">

    <!--Add Customer-->
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Add New Customer
            </a>
        </div>
    </div>

    <br /><br />

    <!--Search Customers-->
    <form asp-controller="Customer" asp-action="Index">
        <p>
            Customer Name <input type="text" name="SearchString" />
            <input type="submit" value="Search" />
        </p>
    </form>

    <!--Search Customer-->
    <form asp-controller="Customer" asp-action="Search">
        <p>
            Customer Code <input type="text" name="id" />
            <input type="submit" value="Search" />
        </p>
    </form>

    <br /><br />

    <!--Search Results-->
    <div class="container p-3">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Customer Number</th>
                        <th>Customer Name</th>
                        <th>Address</th>
                        <th>City/State/Zip</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <!--Customer Number-->
                            <td width="25%">
                                <a asp-controller="Customer" asp-route-Id="@obj.CustomerCode" asp-action="Details">
                                    @obj.CustomerCode
                                </a>
                            </td>

                            <!--Customer Name-->
                            <td width="25%">
                                <a asp-controller="Customer" asp-route-Id="@obj.CustomerCode" asp-action="Details">
                                    @obj.CustomerName
                                </a>
                            </td>

                            <!--Customer Address-->
                            <td width="50%">
                                @obj.AddressLine1
                            </td>

                            <!--Customer City/State/Zip-->
                            <td width="50%">
                                @obj.CityName @obj.StateProvinceCode @obj.ZipPostalCode
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Customer Not Found</p>
        }
    </div>

</div>